{
  "displayName": "Azure AI Video Indexer",
  "name": "azure-ai-video-indexer",
  "scope": "public",
  "version": "0.2.5",
  "attributes": {
    "Provider": "Microsoft",
    "Category": "Application",
    "Application Type": [
      "Pipeline Node"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/azure-video-indexer.git",
    "gitTag": "0.2.5"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "azure-vi-service.azure-vi-module.run_video"
        },
        "name": "Index Video",
        "categories": [
          "Azure-AI-Video-Indexer"
        ],
        "displayName": "Index Video",
        "description": "Run Azure AVI on Video",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Azure AI Video Indexer",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "azure-vi-service.azure-vi-module.run_audio"
        },
        "name": "Index Audio",
        "categories": [
          "Azure-AI-Video-Indexer"
        ],
        "displayName": "Index Audio",
        "description": "Run Azure AVI on Audio",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Azure AI Audio Indexer",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "azure-vi-module",
        "entryPoint": "adapter.py",
        "className": "Adapter",
        "initInputs": [
          {
            "type": "String",
            "name": "azure_vi_integration"
          }
        ],
        "functions": [
          {
            "name": "run_video",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-azure",
            "displayName": "Index Video"
          },
          {
            "name": "run_audio",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-azure",
            "displayName": "Index Audio"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "azure-vi-service",
        "moduleName": "azure-vi-module",
        "runtime": {
          "podType": "regular-s",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        },
        "operation": "none"
      }
    ]
  }
}